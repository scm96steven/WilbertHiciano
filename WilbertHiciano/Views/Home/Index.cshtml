@model WilbertHiciano.Models.Model

@{
    ViewBag.Title = "Home Page";
    Layout = "";
}

<!DOCTYPE html>

<html lang="en-US">
<head>

    <title>LentesRD</title>

    <meta name="theme-color" content="#080738">
    @*<link  href="https://assets.ctfassets.net/zw48pl1isxmc/3vlRMPrFUISEWiuOaiCOq8/fa5652a6abc88ce8835431b8e48317f2/favicon.ico*@
    <link rel="shortcut icon" href="~/Content/favicon.ico" />
