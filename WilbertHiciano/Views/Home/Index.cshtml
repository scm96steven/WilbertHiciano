@model WilbertHiciano.Models.Model

@{
    ViewBag.Title = "Home Page";
    Layout = "";
}

<!DOCTYPE html>

<html lang="en-US">
<head>

    <title>LentesRD</title>

    <meta name="theme-color" content="#080738">

    <link rel="shortcut icon" href="~/Content/favicon.ico" />



    <style>
        label {
            font-weight: bold !important;
        }
    </style>
    <!-- WWW CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/Content/original-62812e042994cb7c74bc74fac4250c3db9b2577d.css" rel="stylesheet" />

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>

    </head>
    <body class="en-us">

        <header class="main-nav-hide">
            <nav class="container navbar navbar-expand-md">
                <a class="logo-optimizely mr-auto text-hide">Lentes RD</a>
   
            </nav>
        </header>
        <main class="resources detail">

            <section class="hero hero-standard   d-flex justify-content-center align-items-center" data-optimizely="hero" style="background-image: url(&#39;http://getwallpapers.com/wallpaper/full/9/8/5/653268.jpg&#39; )">
                <!--  -->
                <div class="hero-content container">

                    <h1 class="">
                        <strong>Ebook <br /> Cómo transformar tu vida,<br /> Un viaje gozoso</strong>
                    </h1>
                    <h2 class="">
                        <strong> </strong>
                    </h2>
                </div>
            </section>
            <section class="split-section container d-flex flex-column flex-md-row">
                <div class="content-side col-md-5 col-lg-6" >
                    <img class="promo-image img-thumbnail" src="https://meditaenmadrid.org/wp-content/uploads/2018/07/5-700x700.jpg" alt="The Optimization Survival Guide">
                    <p><strong>En este grandioso ebook encontrarás cómo:</strong></p>
                    <ul>
                        <li>Aumentar el amor a los demás</li>
                        <li>La gran compasión</li>
                        <li>El amor que desea la felicidad de los demás.</li>
                        <li>El buen corazón supremo</li>
                        <li>El arte de tomar y dejar</li>
                    </ul>
                    <p>  Y un sin número de consejos más para que puedas vivir una vida mejor, no esperes mas.</p>
                 </div>
                <div class="content-side container col-md-5 col-lg-6">
                    <div class="form-wrap">
                        <h2 class="center-aligned"><strong>¡Obtenga el ebook ya!</strong></h2>
     
                        <p class="prog-prof-sub-prompt">Comparte solo unos detalles sobre ti y habilitaremos un link para descargar este Ebook</p>
                       @using (Html.BeginForm("Index", "Home",
                         FormMethod.Post, new { @class = "lead demandbase-form demandbase-active progressive multiform", @id = "landing-page-form" }))
                       {
                    
           
                            <div class="form__wrapper form__wrapper--stacked">
                              
                                    <div class="email-field form-section current">
                                        <label for="email">Correo Electronico</label>
                                        <input type="email" id="email" name="email"  class="require" required placeholder="nombre@mail.com" autocomplete="false" required data-parsley-group="block-0">
                                    </div>

                                    <div>
                                        <label for="fi">Nombre</label>
                                        <input type="text" id="first_name" name="name"  class="require" required autocomplete="false" pattern="([A-z0-9À-ž\s\-`&#39;´_,.]){2,}" data-parsley-group="block-1">
                                
                                    </div>
                                    <div>
                                        <label for="last_name">Apellido</label>
                                        <input type="text" id="lastName" name="lastName"  class="require"  required autocomplete="false" pattern="([A-z0-9À-ž\s\-`&#39;´_,.]){2,}" data-parsley-group="block-1">
                                    </div>

                              



                    

                                <div>
                                    <button type="submit" id="submit" class="next btn btn-success btn-xl btn-block" style="">Descargar</button>

                                </div>
                            </div>

                            
                  

                       }
                    </div>
                </div>
            </section>

        </main>


    </body>
</html>